@model EventViewModel
@{
    Layout = null;
}

<div>
    <div class="card">
        <div class="card-body">
            <div>
                <div class="h4 mb-3">@Model.Name</div>
                <div class="mt-2 d-grid gap-2">
                    <div class="row">
                        <div class="col-3 fw-bold">Time</div>
						<div class="col-9">
							<span>@Model.Days</span>
                            @if (Model.StartTime != null)
                            {
                                <span>| @Model.StartTime - @Model.EndTime</span>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 fw-bold">Location</div>
						<div class="col-9">@Model.Location</div>
                    </div>
                    <div class="row">
                        <div class="col-3 fw-bold">Type</div>
                        <div class="col-9">
							@if (Model.Type == "F")
							{
                                <span class="badge rounded-pill bg-success">Festival</span>
							}
							else if (Model.Type == "S")
							{
                                <span class="badge rounded-pill bg-primary">Season</span>
							}
                        </div>
                    </div>
                </div>
                <hr />
                <div class="fw-bold my-2">Preparation</div>
                <div class="card card-body">@(Html.Raw(Model.Preparation))</div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <button class="btn btn-secondary">Close</button>
        </div>
    </div>
</div>

<script>
    $('#staticModalLgLabel').text("@ViewBag.Title");
</script>