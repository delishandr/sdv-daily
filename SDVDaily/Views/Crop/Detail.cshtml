@model CropViewModel?
@{
    Layout = null;
}

<div>
    <div class="card card-body">
        <div class="row">
            <div class="col-2">
                <img src="~/@ViewBag.ImageFolder/crops/@(Model.Id).png" />
            </div>
            <div class="col-6">
                <div class="h4">@Model.Name</div>
                <div>@Model.CategoryName</div>
            </div>
            <div class="col-4 d-flex justify-content-end">
                <div>
                    @foreach (Season season in Model.Seasons)
                    {
                        <img src="~/@ViewBag.ImageFolder/seasons/@(season.Id).png" width="35" title="@season.Name" />
                    }
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-6">
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Growth Time</div>
                    <div class="col-7">
                        @Model.GrowthTime days
                        @if (Model.Unirrigated != null)
                        {
                            <br /><span>@Model.Unirrigated days (Unirrigated)</span>
                        }
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Regrowth Time</div>
                    <div class="col-7">@Model.RegrowthTime days</div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Is Walkable</div>
                    <div class="col-7">
                        @{
                            if (Model.IsWalkable)
                            {
                                <i class="fas fa-check-circle text-success"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger"></i>
                            }
                        }
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Start Year</div>
                    <div class="col-7">@Model.StartYear</div>
                </div>
            </div>
            <div class="col-6 row">
                <div class="col-4 fw-bold">Sell Prices</div>
                <div class="col-8">
                    <div>Base: @(Model.SellPrice)g</div>
                    <div>Silver: @(Model.SellPrice / 4 * 5)g</div>
                    <div>Gold: @(Model.SellPrice / 2 * 3)g</div>
                    <div>Iridium: @(Model.SellPrice * 2)g</div>
                </div>
            </div>
        </div>
    </div>
    @if (Model != null)
    {
    }
    else
    {
        <div class="text-center">Data not found!</div>
    }
</div>